<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtPlates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placas"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txTorretas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPlates"
                android:layout_marginTop="5dp"
                android:text="Torretas:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtLuces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txTorretas"
                android:layout_marginTop="5dp"
                android:text="Luces:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtLaminas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtLuces"
                android:layout_marginTop="5dp"
                android:text="Laminas:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtLonas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtLaminas"
                android:layout_marginTop="5dp"
                android:text="Lonas:"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_directions_car_black_24dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>