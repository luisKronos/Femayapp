<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:text="PERSONAL"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal presentado:" />

    <EditText
        android:id="@+id/txtPersonalPresented"
        android:background="@color/colorTextVerde"
        android:layout_marginTop="@dimen/top_field"
        android:layout_width="@dimen/width_field"
        android:layout_height="@dimen/height_field"
        android:inputType="number"/>

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uniformes:" />

    <EditText
        android:id="@+id/txtUniformes"
        android:background="@color/colorTextVerde"
        android:layout_marginTop="@dimen/top_field"
        android:layout_width="@dimen/width_field"
        android:layout_height="@dimen/height_field"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_section"
        android:text="Chalecos:"
        android:visibility="gone" />

    <EditText
        android:id="@+id/txtChalecos"
        android:layout_width="@dimen/width_field"
        android:layout_height="@dimen/height_field"
        android:layout_marginTop="@dimen/top_field"
        android:background="@color/colorTextVerde"
        android:inputType="number"
        android:visibility="gone" />

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guantes:" />

    <EditText
        android:id="@+id/txtGuantes"
        android:background="@color/colorTextVerde"
        android:layout_marginTop="@dimen/top_field"
        android:layout_width="@dimen/width_field"
        android:layout_height="@dimen/height_field"
        android:inputType="number"/>

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mangas impermeables:" />

    <EditText
        android:id="@+id/txtMangas"
        android:background="@color/colorTextVerde"
        android:layout_marginTop="@dimen/top_field"
        android:layout_width="@dimen/width_field"
        android:layout_height="@dimen/height_field"
        android:inputType="number"/>

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botas:" />

    <EditText
        android:id="@+id/txtBotas"
        android:background="@color/colorTextVerde"
        android:layout_marginTop="@dimen/top_field"
        android:layout_width="@dimen/width_field"
        android:layout_height="@dimen/height_field"
        android:inputType="number"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/top_section"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

    <Button
            android:layout_marginTop="@dimen/top_section"
            android:id="@+id/btnFinish"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@color/colorButton"
            android:text="Terminar" />


</LinearLayout>
</ScrollView>
