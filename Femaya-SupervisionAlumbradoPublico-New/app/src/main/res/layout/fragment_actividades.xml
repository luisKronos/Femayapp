<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:text="ACTIVIDADES"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barrido Rustico:" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorButton"/>

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barrido Fino:" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorButton"/>

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papeleo:" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorButton"/>

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retiro de Propaganda:" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorButton"/>


    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recolección de Tiradero:" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorButton"/>

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recolección de Tierra:" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorButton"/>

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retiro de objetos mayores:" />

    <Spinner
        android:id="@+id/spinner7"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorButton"/>

    <TextView
        android:layout_marginTop="@dimen/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retiro de brote y deshierbe:" />

    <Spinner
        android:id="@+id/spinner8"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorButton"/>




    <Button
            android:layout_marginTop="@dimen/top_section"
            android:id="@+id/btnFinish"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@color/colorButton"
            android:text="GUARDAR" />


</LinearLayout>
</ScrollView>
